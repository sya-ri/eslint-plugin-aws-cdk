{
  "compilerOptions": {
    "target": "es2016",
    "module": "Node16",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
